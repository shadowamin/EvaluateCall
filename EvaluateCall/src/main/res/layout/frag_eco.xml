<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
  <TextView
            android:id="@+id/fragTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/yellow_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descriptionFrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/gray_dark" />
            <TextView
                android:id="@+id/contactsPro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Contacts pro :"
                android:textColor="@color/blue_header" />

            <com.mixxitevaluatecall.EconomieSeekBar
                android:id="@+id/seekbarPro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:itemsArrayId="@array/seek_bar_eco" />

            <TextView
                android:id="@+id/contactsPerso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Contacts perso :"
                android:textColor="@color/blue_header" />

            <com.mixxitevaluatecall.EconomieSeekBar
                android:id="@+id/seekbarPerso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:itemsArrayId="@array/seek_bar_eco" />
             <TextView
                android:id="@+id/contactsOthers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Autres Appels entrants :"
                android:textColor="@color/blue_header" />

            <com.mixxitevaluatecall.EconomieSeekBar
                android:id="@+id/seekbarOthers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:itemsArrayId="@array/seek_bar_eco" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>