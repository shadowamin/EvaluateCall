<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
             <TextView
            android:id="@+id/fragTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/yellow_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descriptionFrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/gray_dark" />
<TextView
        android:id="@+id/textDays"
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:paddingLeft="16dp"
        android:paddingRight="32dp"
        android:textColor="@color/gray_dark"
        android:gravity="center_vertical"
        android:text="TextView" />
<View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />
<TextView
        android:id="@+id/textHoures"
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:paddingLeft="16dp"
        android:paddingRight="32dp"
        android:textColor="@color/gray_dark"
        android:gravity="center_vertical"
        android:text="TextView" />
<View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="32dp"
        android:gravity="center_vertical" >
    <CheckBox
        android:id="@+id/checkBoxPro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
         android:button="@drawable/mail_check"
         
       android:textColor="@color/gray_dark" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginLeft="16dp"
       android:textColor="@color/gray_dark"
        android:text="@string/get_perso_calls"
        />

</LinearLayout>

    
<View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="32dp"
        android:gravity="center_vertical" >
    <CheckBox
        android:id="@+id/checkBoxPerso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
         android:button="@drawable/mail_check"
         
       android:textColor="@color/gray_dark" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginLeft="16dp"
       android:textColor="@color/gray_dark"
        android:text="@string/get_pro_calls"
        />

</LinearLayout>
 
            
        </LinearLayout>
    </ScrollView>

   
</LinearLayout>